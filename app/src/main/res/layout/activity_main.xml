<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="通用输入改写助手"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- 状态显示 -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="❌ API未配置\n❌ 输入法未启用"
            android:background="@drawable/status_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- API配置卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/status_background"
            android:orientation="vertical"
            android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="API 配置"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- API Base URL -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="API Base URL"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />
                
                <EditText
                    android:id="@+id/et_api_base_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:text="https://api.openai.com/v1"
                    android:background="@drawable/example_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- API Key -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="API Key"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />
                
                <EditText
                    android:id="@+id/et_api_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:background="@drawable/example_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Model Name -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="模型名称"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />
                
                <EditText
                    android:id="@+id/et_model_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text="gpt-3.5-turbo"
                    android:background="@drawable/example_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- 保存按钮 -->
                <Button
                    android:id="@+id/btn_save_api_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="保存 API 设置"
                    android:backgroundTint="@color/primary_color" />

        </LinearLayout>

        <!-- 输入法设置按钮 -->
        <Button
            android:id="@+id/btn_setup_ime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置输入法"
            android:layout_marginBottom="16dp"
            style="@android:style/Widget.Material.Button.Borderless" />

        <!-- 添加动作按钮 -->
        <Button
            android:id="@+id/fab_add_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ 添加新动作"
            android:backgroundTint="@color/primary_color"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- 动作列表卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/status_background"
            android:orientation="vertical"
            android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="自定义动作"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- 动作列表 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_actions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

</FrameLayout>
